{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动 VoltPilot 后端",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/server.js",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--experimental-specifier-resolution=node",
                "--es-module-specifier-resolution=node"
            ],
            "outFiles": [
                "${workspaceFolder}/backend/src/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "附加到已运行的后端",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}